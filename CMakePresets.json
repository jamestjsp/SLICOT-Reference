{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug (MinGW)",
      "description": "Configure for Windows (MinGW x64) Debug build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/windows-x64-debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release (MinGW)",
      "description": "Configure for Windows (MinGW x64) Release build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/windows-x64-release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "description": "Configure for Linux (GCC x64) Debug build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/linux-x64-debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "description": "Configure for Linux (GCC x64) Release build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/linux-x64-release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-x64-debug",
      "displayName": "macOS x64 Debug",
      "description": "Configure for macOS (Clang x64) Debug build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/macos-x64-debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-x64-release",
      "displayName": "macOS x64 Release",
      "description": "Configure for macOS (Clang x64) Release build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/macos-x64-release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_Fortran_COMPILER": "gfortran"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64-debug-build",
      "displayName": "Build Windows x64 Debug (MinGW)",
      "configurePreset": "windows-x64-debug",
      "description": "Build Debug configuration for Windows x64 (MinGW)."
    },
    {
      "name": "windows-x64-release-build",
      "displayName": "Build Windows x64 Release (MinGW)",
      "configurePreset": "windows-x64-release",
      "description": "Build Release configuration for Windows x64 (MinGW)."
    },
    {
      "name": "linux-x64-debug-build",
      "displayName": "Build Linux x64 Debug",
      "configurePreset": "linux-x64-debug",
      "description": "Build Debug configuration for Linux x64."
    },
    {
      "name": "linux-x64-release-build",
      "displayName": "Build Linux x64 Release",
      "configurePreset": "linux-x64-release",
      "description": "Build Release configuration for Linux x64."
    },
    {
      "name": "macos-x64-debug-build",
      "displayName": "Build macOS x64 Debug",
      "configurePreset": "macos-x64-debug",
      "description": "Build Debug configuration for macOS x64."
    },
    {
      "name": "macos-x64-release-build",
      "displayName": "Build macOS x64 Release",
      "configurePreset": "macos-x64-release",
      "description": "Build Release configuration for macOS x64."
    }
  ],
  "testPresets": [
    {
      "name": "windows-x64-debug-test",
      "displayName": "Test Windows x64 Debug (MinGW)",
      "configurePreset": "windows-x64-debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "windows-x64-release-test",
      "displayName": "Test Windows x64 Release (MinGW)",
      "configurePreset": "windows-x64-release",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "linux-x64-debug-test",
      "displayName": "Test Linux x64 Debug",
      "configurePreset": "linux-x64-debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "linux-x64-release-test",
      "displayName": "Test Linux x64 Release",
      "configurePreset": "linux-x64-release",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "macos-x64-debug-test",
      "displayName": "Test macOS x64 Debug",
      "configurePreset": "macos-x64-debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "macos-x64-release-test",
